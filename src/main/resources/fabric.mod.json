{
	"schemaVersion": 1,
	"id": "emacsinput",
	"version": "${version}",
	"name": "Emacs Input",
	"description": "Adds Emacs-style keybindings to Minecraft text input fields.",
	"authors": [
		"woadwizard"
	],
	"contact": {
		"homepage": "https://modrinth.com/mod/emacsinput",
		"sources": "https://github.com/gknightly/emacsinput",
		"issues": "https://github.com/gknightly/emacsinput/issues"
	},
	"license": "GPL-3.0-or-later",
	"icon": "assets/emacsinput/icon.png",
	"accessWidener": "emacsinput.accesswidener",
	"environment": "client",
	"entrypoints": {
		"client": [
			"net.woadwizard.EmacsInputClient"
		],
		"modmenu": [
			"net.woadwizard.config.ModMenuIntegration"
		]
	},
	"mixins": [
		"emacsinput.client.mixins.json"
	],
	"depends": {
		"fabricloader": ">=0.15.0",
		"minecraft": "~1.20.1",
		"java": ">=17",
		"fabric-api": "*",
		"cloth-config": "*"
	}
}